{
  "require": {
    "php": "^7.0",
    "ext-pdo": "*",
    "php-activerecord/php-activerecord": "^1.2",
    "smarty/smarty": "^3.1",
    "pragmarx/ia-arr": "^7.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('config/db.example.php') || copy('config/db.example.php', 'config/db.php');\""
    ]
  }
}
